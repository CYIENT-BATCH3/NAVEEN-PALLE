/*
 * naveen palle(70301)
 *
 * algorithm:
 * using same function name in a class to print the area of circle and rectangle and triangle
 * in the method of Polymorphism,(FUNCTION OVERLOADING)
 */
#include <iostream>
using namespace std;
#define pi 3.14

class naveen
{
    public:
    void area(int a){
        cout<<"area of circle is :"<<(pi*a*a)<<endl;
    }
    void area(int x,int y){
        cout<<"area of rectange is :"<<(x*y)<<endl;
    }
     void area(double x, double y){
        cout<<"area of triangle is :"<<(0.5*x*y)<<endl;
    }
};
int main() {
     naveen s1;
    s1.area(5);
    s1.area(2,4);
    s1.area(2.5,4.5);

    return 0;
}
/* output:
 * area of circle is :78.5
area of rectange is :8
area of triangle is :5.625
 */
