#include<stdio.h>
int main(){
   float a;
   float b;
   char c;
   float z;
   printf("enter two values first : ");
   scanf("%f%f",&a,&b);//input
   printf("enter the operator ('+','-','*','/' ): ");
   scanf(" %c",&c);//assigning
//.......uing switch cases for making calculator.........
   switch(c){
       case '+'://for adding
       z=0;
       z=a+b;
       printf("%f",z);
       break;
        case '-'://for sub
       z=0;
       z=a-b;
       printf("%f",z);
       break;
        case '*'://for multiplication
       z=0;
       z=a*b;
       printf("%f",z);
       break;
        case '/'://for division
       z=0;
       z=a/b;
       printf("%f",z);
       break;
   }
        
    }
