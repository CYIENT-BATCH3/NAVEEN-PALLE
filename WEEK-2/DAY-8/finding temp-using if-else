#include<stdio.h>

 main(){
 float temp;
 printf("enter temp :");
 scanf("%f",&temp);//input 
  if(temp<10 && temp>0){//checking temp ,for  very cold
     printf("very cold");
  }
 else if(temp>10 && temp<20){//checking temp ,for  cold
     printf("cold");
 }
 else if(temp>20 && temp<30){//checking temp ,for normal
     printf("normal in temp");
 }
 else if(temp>30 && temp <40){//checking temp ,for hot
     printf("hot");
 }
 else if(temp>40 && temp <50){//checking temp ,for very hot
     printf("very hot");
 }
 else if(temp <0){//checking temp ,for  freezing weather
     printf("freezing weaher");
 }
 else {
     printf("very hot"); using else if temp more then  50
 }
}
