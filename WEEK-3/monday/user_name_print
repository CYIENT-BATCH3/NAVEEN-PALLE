/******************************************************************************

user name print
ask user first name and last name
using input reader store that name in char array 
and print it

*******************************************************************************/
#include <stdio.h>

int main()//main
{
    char first_name[20];//local var for first name storeing
    char last_name[20];//local var for last name storeing
  printf("enter he first name : ");//message
  scanf("%s",first_name);//storeing
  printf("enter he last name : ");//message
  scanf("%s",last_name);//storeing
  printf("the full name is : %s %s",first_name,last_name);//print
}
