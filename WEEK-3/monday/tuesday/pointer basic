
/* FIND THE ADRESS OF OF DATATYPES USING POINTERS
AND VALUES OF IT
.............................................*/
#include <stdio.h>


 int main(){//MAIN FUNCTION
     int a=9;//INT VARIBALES
     float b=2.2;//FLOAT VARIBALE
     char c='G';//CHAR VARIABLE
     float *pf;//FLOAT POINTER
     pf=&b;//ASSIGN THE ADRESS OF IT
     int *pi;//INT POINTER
     pi=&a;//ASSIGN THE ADRESS OF IT
     char* c1;//CHAR POINTER
     c1=&c;//ASSIGN THE ADRESS OF IT
     
     printf(" FLOAT VALUE :%f\n INT VALUE: %d \n CHAR VALUE:%c\n",*pf,*pi,*c1);//PRIMTIG VALUES
     printf("adress of float is:%u\n",pf);//adress of float
      printf("adress of int is:%u\n",pi);//adress of int
       printf("adress of char is:%u\n",c1);//adress of char
 }
