/******************************************************************************

finding he string length using strlen


*******************************************************************************/
#include <stdio.h>
#include<string.h>

int main()//main
{
   
  char str[20];//array
  printf("enter :");//message
  scanf("%[^\n]s",str);//input
 //gets(str);
  int c=strlen(str);//;length
  printf("string lengh is %d",c);//output
}
